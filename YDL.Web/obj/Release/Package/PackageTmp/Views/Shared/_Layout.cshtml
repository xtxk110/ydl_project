@using YDL.Web;
@{
    var curUser = OnlineHelper.GetCurrentUser();
}
<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 悦动力</title>
    @Styles.Render("~/Content/css1")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("Style", required: false)

    <script type="text/javascript">

    var globalConfig = {
            virtualPath: '@ViewHelper.RootUrl',
            userID: '@(curUser == null ? "-1" : curUser.Id)',
            isAdmin: @(curUser == null ? "false" : curUser.IsAdmin.ToString().ToLower())
        }

    </script>
</head>
<body>
    @RenderSection("Body", required: false)

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("Script", required: false)
</body>
</html>
